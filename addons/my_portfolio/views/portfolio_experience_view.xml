<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_portfolio_experience_tree" model="ir.ui.view">
            <field name="name">portfolio.experience.list</field>
            <field name="model">portfolio.experience</field>
            <field name="arch" type="xml">
                <list>
                    <field name="title"/>
                    <field name="company"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </list>
            </field>
        </record>

        <record id="view_portfolio_experience_form" model="ir.ui.view">
            <field name="name">portfolio.experience.form</field>
            <field name="model">portfolio.experience</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="title"/>
                            <field name="company"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="experience_action" model="ir.actions.act_window">
            <field name="name">Experience</field>
            <field name="res_model">portfolio.experience</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p>
                    Add Experience
                </p>
            </field>
        </record>
    </data>
</odoo>
