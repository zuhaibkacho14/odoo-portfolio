<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_portfolio_project_tree" model="ir.ui.view">
            <field name="name">portfolio.project.tree</field>
            <field name="model">portfolio.project</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="project_link"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </list>
            </field>
        </record>

        <record id="view_portfolio_project_form" model="ir.ui.view">
            <field name="name">portfolio.project.form</field>
            <field name="model">portfolio.project</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="image"/>
                            <field name="project_link"/>
                            <field name="skills_ids"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
         <record id="project_action" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">portfolio.project</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p>
                    Add Project
                </p>
            </field>
        </record>
    </data>
</odoo>
